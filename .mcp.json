{
  "mcpServers": {
    "sequential-thinking": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "zen": {
      "command": "sh",
      "args": [
        "-c",
        "exec $(which uvx || echo uvx) --from git+https://github.com/BeehiveInnovations/zen-mcp-server.git pal-mcp-server"
      ]
    },
    "qdrant-local": {
      "type": "stdio",
      "command": "sh",
      "args": [
        "-c",
        "docker start qdrant-db 2>/dev/null || docker run -d --name qdrant-db -p 6333:6333 -p 6334:6334 -v \"$PWD/.memories/qdrant_data:/qdrant/storage\" qdrant/qdrant:latest; sleep 2; exec npx -y @mhalder/qdrant-mcp-server"
      ],
      "env": {
        "TRANSPORT_MODE": "stdio",
        "EMBEDDING_PROVIDER": "openai",
        "EMBEDDING_MODEL": "text-embedding-3-large",
        "QDRANT_URL": "http://localhost:6333"
      }
    }
  }
}